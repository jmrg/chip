{
    "name": "jmrg/chip",
    "description": "PHP Micro-Framework.",
    "keywords": ["micro-framework", "framework", "chip", "fast", "php"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "klein/klein": "2.1.*",
        "illuminate/database": "5.4.*",
        "symfony/config": "3.4.*"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.0",
        "kint-php/kint": "2.2.*",
        "symfony/process": "3.4.*",
        "guzzlehttp/guzzle": "6.3.*"
    },
    "autoload": {
        "files": ["src/Config.php"],
        "psr-4": {
          "Chip\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "optimize-autoloader": true
}
